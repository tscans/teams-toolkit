{
  "compilerOptions": {
    "types": ["node"],
    "module": "CommonJS",
    "target": "es2017",
    "outDir": "build",
    "lib": ["es6", "dom.iterable", "dom"],
    "importHelpers": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declarationMap": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "declaration": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/tests/*"]
}
